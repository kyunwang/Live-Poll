<% include ./partials/header.ejs %>

<a href="/">Go back</a>

<header>
	<h1><%= poll.question %></h1>
</header>

<form action="/poll/<%= poll._id %>" method="POST">
	<ul>
		<% poll.choices.forEach(function(choice) { %>
			<li class="poll--choice">
				<input id="<%= choice.id %>" type="radio" name="poll-choice" value="<%= choice.id %>" required/>

				<label id="test-<%= choice.id %>" for="<%= choice.id %>">
					<p><b><%= choice.answer %></b></p>
					<p>votes:
						<span id="votes-<%= choice.id %>"><%= choice.votedOn %></span>
					</p>
				</label>
			</li>
		<% }) %>
	</ul>

	<input type="submit" value="Vote"/>
</form>

<script src="/index.js"></script>

<% include ./partials/footer.ejs %>